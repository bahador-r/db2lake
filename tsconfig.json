{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib"
  },
  "private": true,
  "workspaces": [
    "packages/core",
    "packages/driver-mysql",
    "packages/driver-postgres",
    "packages/driver-snowflake",
    "packages/driver-redshift",        
    "packages/driver-bigquery",
    "packages/driver-oracle",        
    "packages/driver-sqlserver",
    "packages/driver-databricks"
  ]
}
